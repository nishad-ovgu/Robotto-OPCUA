<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/AddConnectlayout" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AddConnecttext"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ADD NEW CONNECTION" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/layoutdivider"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/AddConnectlayout"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/ConnectionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutdivider"
        android:layout_alignLeft="@+id/layoutdivider"
        android:layout_gravity="center"
        android:paddingLeft="2dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Connection List"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/scrolldivider"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ConnectionList"
        android:background="@color/colorPrimaryDark" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/connections"
        android:layout_below="@+id/scrolldivider"
        android:layout_alignEnd="@id/scrolldivider"
        android:layout_alignStart="@id/scrolldivider">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:id="@+id/textview"
        android:textSize="16sp" />

</RelativeLayout>